// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @unique @default(autoincrement())
  title       String
  description String?
  date        DateTime
  ticketPrice Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tickets     Ticket[]
}

model Ticket {
  id        Int      @id @unique @default(autoincrement())
  eventId   Int
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  event     Event    @relation(fields: [eventId], references: [id])
}

enum Role {
  ADMIN
  USER
  EO
}

enum Status {
  PENDING
  VERIFIED
  REJECTED
}

model User {
  id        Int      @id @unique @default(autoincrement())
  email     String
  username  String
  password  String
  status    Status
  role      Role
  createdAt DateTime @default(now())
}
